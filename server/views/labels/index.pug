extends ../layouts/application.pug

block header
  = t('views.labels.index')

block content
  a.btn.btn-warning(href=route('newLabel') type="button")= t('views.labels.actionButtons.create')
  .table-responsive
    table.table.table-striped
      thead
        tr
          th= t('views.labels.id')
          th= t('views.labels.name')
          th= t('views.labels.createdAt')
          th= t('views.labels.actions')
      tbody
        each label in labels
          tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
              .d-flex.flex-wrap
                a(href=routeTo('editLabel', { id: label.id }) class="btn btn-warning me-1" type="button")= t('views.labels.actionButtons.edit')
                +buttonTo(routeTo('deleteLabel', { id: label.id }), 'delete')(class="btn btn-danger" value=t('views.labels.actionButtons.delete'))
