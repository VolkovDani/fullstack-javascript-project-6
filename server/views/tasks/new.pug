extends ../layouts/application.pug

block header
  = t('views.tasks.new')

block content
  form(action="/tasks" method="post")
    +input(task, 'name', errors)
    +inputTextarea(task, 'description', errors)
    +inputSelect(statuses, 'status', errors, task)
    +inputSelect(users, 'executor', errors, task)
    +inputSelectMultipleLabels(labels, 'labels', errors, task)
    +submit(task)(value=t('views.tasks.submit'))
